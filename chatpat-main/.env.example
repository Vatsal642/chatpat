# Server
PORT=5000

# Database
# Example (Neon/Supabase/Managed Postgres) connection string
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB_NAME

# Google AI (Gemini / Imagen)
# Use either GEMINI_API_KEY or GOOGLE_AI_API_KEY
GEMINI_API_KEY=your_gemini_api_key
# GOOGLE_AI_API_KEY=your_gemini_api_key

# Sessions
SESSION_SECRET=replace_with_a_long_random_string

# Auth mode
# dev = built-in dev user for localhost
# prod = use OIDC (Replit) in production
AUTH_MODE=dev

# Optional: Replit OIDC (production)
REPLIT_DOMAINS=
REPL_ID=
ISSUER_URL=https://replit.com/oidc
COOKIE_SECURE=false